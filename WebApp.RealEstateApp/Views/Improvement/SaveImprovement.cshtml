@using RealEstateApp.Core.Application.ViewModels.Improvement
@model SaveImprovementViewModel
@{
    bool isEditing = Model.Id == 0 ? false : true;
    ViewData["Title"] = "Guardar Mejora";
}

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

<div id="contact" class="contact-area section-padding">

    <div class="row mb-3 mt-4">
        <div class="col-3">
            <a asp-controller="TypeProperty" asp-action="Index" class="btn btn-contact-bg h2">Volver</a>
        </div>
    </div>

    <div class="container text-center">
        <div class="section-title text-center mt-5">
            <h1>@(isEditing ? $"Editando la mejora: {Model.Name}" : "Creando una nueva mejora")</h1>
        </div>
        <div class="row">
            <div class="col-11">
                <div class="contact">
                    <form method="post" asp-controller="Improvement" asp-action="@(isEditing ? "Edit":"Create")" class="form" name="enq">

                        <div class="row">

                            <div class="form-group col-md-12 mb-4">
                                <input asp-for="Name" type="text" name="Name" class="form-control" placeholder="Tipo de Venta">
                                <span asp-validation-for="Name" class="text-danger"></span>

                            </div>
                            <div class="form-group col-md-12 mb-5">
                                <textarea asp-for="Description" rows="6" name="Description" class="form-control" placeholder="Descripcion"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 text-center">
                                <button type="submit" value="Send message" name="submit" id="submitButton" class="btn btn-contact-bg" title="Guardar">Guardar</button>
                            </div>
                        </div>
                        <input type="hidden" asp-for="Id" />
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>